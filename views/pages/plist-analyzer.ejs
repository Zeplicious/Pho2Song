<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">

    <!-- Bootstrap CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet"
        integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">

    <link rel="stylesheet" href="./css/plist_analyzer_style.css">

    <title>Pho2Song-P.list analyzer</title>
</head>

<body>

    <%- include("../partials/navbar.ejs"); %>

        <div class="container">
            <div class="row">
                <h1 class="pb-2 text-center">Scegli una playlist da analizzare</h1>
                <form>
                    <div class="col-lg-8 mx-auto">
                        <% playlists.forEach(playlist=> { %>
                            <div class="form-check">
                                <input class="form-check-input" type="radio" name="playlistID"
                                    value="<%= playlist.id %>" id="flexRadioDefault"
                                    onclick=" showAnalysis(this.value)">
                                <label class="form-check-label" for="flexRadioDefault">
                                    <%= playlist.name %>
                                </label>
                            </div>
                            <% }) %>
                    </div>
                    <div class="row">
                        <div class="col-lg-6 text-start">
                            <ul id="stats1" class="list-group" style="display:none;">
                                <li id="acousticness" class="list-group-item">
                                </li>
                                <li id="danceability" class="list-group-item">

                                </li>
                                <li id="energy" class="list-group-item">

                                </li>
                                <li id="instrumentalness" class="list-group-item">

                                </li>
                                <li id="liveness" class="list-group-item">

                                </li>
                                <li id="speechiness" class="list-group-item">

                                </li>
                                <li id="loudness" class="list-group-item">

                                </li>
                                <li id="tempo" class="list-group-item">

                                </li>
                            </ul>
                        </div>
                    </div>
                </form>
            </div>
        </div>






        <!-- Optional JavaScript -->

        <!-- Option 1: Bootstrap Bundle with Popper -->
        <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js"
            integrity="sha384-ka7Sk0Gln4gmtz2MlQnikT1wXgYsOg+OMhuP+IlRH9sENBO0LRn5q+8nbTov4+1p" crossorigin="anonymous">
            </script>

        <!-- Local scripts -->
        <script src="./scripts/plist_analyzer_scripts.js"></script>
</body>

</html>