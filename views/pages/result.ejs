    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet"
        integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">
    <title>Pho2Song</title>
    <script>
        function getSong(id){
        var xmlhttp = new XMLHttpRequest();
        xmlhttp.onreadystatechange = function() {
            if (this.readyState == 4 && this.status == 200) {
                if(this.responseText!='fin'){
                    let string='<iframe style="border-radius:12px" src='+this.responseText+ 'width="20%" height="80" frameBorder="0" allowfullscreen="" allow="autoplay; clipboard-write; encrypted-media; fullscreen; picture-in-picture"></iframe>';
                    document.getElementById(id).innerHTML+=string;
                    getSong(++id);
                }
            }
        };
        xmlhttp.open("GET", "getSong", true);
        xmlhttp.send();
    }</script>
</head>
<body onload="getSong(0)">
